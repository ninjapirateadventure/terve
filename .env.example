# Environment Variables Template
# Copy this to .env and fill in your actual values

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_USERNAME=terve_user
DB_PASSWORD=terve_password
DB_NAME=terve
DATABASE_URL=postgresql://terve_user:terve_password@database:5432/terve

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OAuth Configuration (to be filled when implementing Stage 2)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Claude API for story generation (to be used in Stage 5)
CLAUDE_API_KEY=your-claude-api-key

# Redis Configuration (optional for sessions)
REDIS_HOST=redis
REDIS_PORT=6379
